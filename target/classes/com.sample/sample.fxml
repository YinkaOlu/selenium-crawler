      <Label GridPane.rowIndex="2" GridPane.columnIndex="0">Hero Name</Label>
      <TextField GridPane.rowIndex="3" GridPane.columnIndex="0" fx:id="heroName"/>

      <Button mnemonicParsing="false" onAction="#startBrowser" text="Start Search" GridPane.columnIndex="0" GridPane.rowIndex="4" />

   </children>
