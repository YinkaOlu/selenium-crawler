<GridPane alignment="center" hgap="10" vgap="10" xmlns="http://javafx.com/javafx/8.0.102" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.sample.Controller">
   <children>
         <Label prefWidth="317.0" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="1">Hero Universe</Label>
            <HBox prefHeight="0.0" prefWidth="200.0" GridPane.columnIndex="1" GridPane.rowIndex="2">
                 <children>
                    <RadioButton fx:id="DC_btn" mnemonicParsing="false" text="DC" />
                    <RadioButton fx:id="marvel_btn" mnemonicParsing="false" text="Marvel" />
                 </children>
            </HBox>

         <Label GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="3">Hero Name</Label>
         <TextField fx:id="heroName" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="4" />

         <RadioButton fx:id="villainBtn" mnemonicParsing="false" text="Villain" GridPane.columnIndex="1" GridPane.rowIndex="6" />
         <RadioButton fx:id="heroBtn" layoutX="20.0" layoutY="205.0" mnemonicParsing="false" text="Hero" GridPane.columnIndex="2" GridPane.rowIndex="6" />
       <RadioButton fx:id="antiHeroBtn" layoutX="20.0" layoutY="205.0" mnemonicParsing="false" text="Anti-Hero" GridPane.columnIndex="3" GridPane.rowIndex="6" />

       <RadioButton fx:id="maleBtn" mnemonicParsing="false" text="Male" GridPane.columnIndex="1" GridPane.rowIndex="8" />
       <RadioButton fx:id="femaleBtn" layoutX="20.0" layoutY="205.0" mnemonicParsing="false" text="Female" GridPane.columnIndex="2" GridPane.rowIndex="8" />


      <Button mnemonicParsing="false" onAction="#startBrowser" text="Start Search" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.rowIndex="10" />
   </children>
   <columnConstraints>
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
      <RowConstraints />
   </rowConstraints>
</GridPane>
